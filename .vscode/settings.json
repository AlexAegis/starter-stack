{
	"tslint.alwaysShowRuleFailuresAsWarnings": true,
	"editor.formatOnSave": true,
	"editor.autoIndent": true,
	"editor.tabCompletion": "off",
	"editor.quickSuggestionsDelay": 0,
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": false
	},
	"editor.wordBasedSuggestions": true,
	"editor.suggest.localityBonus": true,
	"editor.snippetSuggestions": "bottom",
	"editor.tabSize": 4,
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
		"source.organizeImports": true
	},
	"editor.fontFamily": "'Fira Code Regular', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
	"editor.fontLigatures": true,
	"editor.mouseWheelZoom": true,
	"material-icon-theme.folders.associations": {
		// This option doesn't work here, copy it and the next entry into your user settings if you wish to have folder icon associations
		"module": "font",
		"modules": "font",
		"component": "components",
		"doc": "markdown",
		"animation": "delta",
		"guard": "ngrx-effects",
		"directive": "ngrx-actions",
		"directives": "ngrx-actions",
		"interceptor": "middleware",
		"validator": "coverage",
		"e2e": "test",
		"store": "Redux-store",
		"actions": "ngrx-actions",
		"action": "ngrx-actions",
		"effects": "Ngrx-effects",
		"effect": "Ngrx-effects",
		"reducers": "ngrx-reducer",
		"reducer": "ngrx-reducer"
	},
	"material-icon-theme.files.associations": {
		"*.animation.ts": "purescript"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"node_modules": true,
		"coverage": true
	},
	"files.associations": {
		"*.json": "jsonc"
	},
	"terminal.integrated.windowsEnableConpty": true,
	"jestrunner.runOptions": ["-r ts-node/register", "-r tsconfig-paths/register"]
}
